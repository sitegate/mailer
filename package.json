{
  "name": "sitegate-mailer",
  "version": "0.2.1",
  "description": "A SiteGate microservice for sending emails",
  "scripts": {
    "start": "node app",
    "test": "mocha test/{**/,/}*.js",
    "coverage": "istanbul cover _mocha test/{**/,/}*.js -- -R spec",
    "coveralls": "istanbul cover _mocha test/{**/,/}*.js --report lcovonly -- -R spec && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage"
  },
  "keywords": [
    "mail",
    "sitegate"
  ],
  "author": {
    "name": "Zoltan Kochan",
    "email": "zoltan.kochan@gmail.com",
    "url": "http://kochan.io"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/sitegate/mailer.git"
  },
  "license": "MIT",
  "dependencies": {
    "convict": "^1.0.2",
    "debug": "^2.2.0",
    "email-templates": "^2.0.1",
    "i18next": "^1.10.4",
    "jade": "^1.11.0",
    "jimbo": "0.0.8",
    "joi": "^7.1.0",
    "less": "^2.5.1",
    "nodemailer": "^1.4.0",
    "nodemailer-mailgun-transport": "^1.0.1",
    "q": "^1.4.1",
    "yaml-or-json": "^0.1.0"
  },
  "devDependencies": {
    "chai": "^3.4.1",
    "coveralls": "^2.11.6",
